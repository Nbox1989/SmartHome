<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<TextView
		    android:id="@+id/tv_deviceMac"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="20sp"/>
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:gravity="right">
			<TextView
			    android:id="@+id/tv_deviceOnline"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="20sp"/>	
			<ToggleButton 
			    android:id="@+id/tbtn_ctrlpanel"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textOn="打开控制面板"
			    android:textOff="关闭控制面板"
			    android:checked="false"/>
		</LinearLayout> 
	</LinearLayout>
    
    <LinearLayout
        android:id="@+id/ly_ctrlPanel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:visibility="visible">
		<RadioGroup
		    android:id="@+id/rg_ctrlMsg"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <RadioButton
		        android:id="@+id/rb_open"
		        android:text="open"
		        android:checked="true"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
		    <RadioButton
		        android:id="@+id/rb_close"
		        android:text="close"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
		    <RadioButton
		        android:id="@+id/rb_stop"
		        android:text="stop"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
		</RadioGroup>
		<Button
	        android:id="@+id/btn_sendCtrlMsg"
	        android:text="发送控制信息"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</LinearLayout>

</LinearLayout>
