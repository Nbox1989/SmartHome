<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:divider="@drawable/divider"
		android:dividerHeight="1dp"
		android:showDividers="end">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Phone Number:"/>
		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_PhoneNum"/>
		<Button
			android:id="@+id/btn_confirm_phoneNum"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="修改并保存"/>

	</LinearLayout>
	<com.test.UI.IpAddressEditor
        android:id="@+id/edt_IP"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"/>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<Button
	        android:id="@+id/btn_connectServer"
	        android:text="连接服务"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
		<Button
	        android:id="@+id/btn_disconnectServer"
	        android:text="断开服务"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
	</LinearLayout>
	<com.test.UI.MacAddressEditor
        android:id="@+id/edt_MAC"
        android:layout_height="wrap_content"  
        android:layout_width="wrap_content"/>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
		<Button
	        android:id="@+id/btn_addDevice"
	        android:text="添加设备"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
		<Button
	        android:id="@+id/btn_delDevice"
	        android:text="删除设备"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:orientation="vertical"
		android:divider="@drawable/divider"
		android:dividerHeight="1dp"
		android:showDividers="beginning">
		<ScrollView
			android:id="@+id/sc_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<com.test.UI.MyListView
				android:id="@+id/list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</ScrollView>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:divider="@drawable/divider"
		android:dividerHeight="1dp"
		android:showDividers="beginning">
		 <TextView
			android:id="@+id/tv_clientRec"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:lines="10"
			android:textIsSelectable="true"
			android:hint="received messages show here"/>
	</LinearLayout>
</LinearLayout>
